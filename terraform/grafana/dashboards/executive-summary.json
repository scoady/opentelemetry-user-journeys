{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus (Mimir)",
      "description": "Grafana Cloud Prometheus / Mimir",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana",    "id": "grafana",    "name": "Grafana",     "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus",  "version": "1.0.0"  },
    { "type": "panel",      "id": "stat",       "name": "Stat",        "version": ""       },
    { "type": "panel",      "id": "timeseries", "name": "Time series", "version": ""       },
    { "type": "panel",      "id": "table",      "name": "Table",       "version": ""       }
  ],
  "title": "TechMart — Executive Summary",
  "description": "One-glance platform health for leadership. Is TechMart healthy?",
  "uid": "techmart-executive-summary",
  "version": 1,
  "schemaVersion": 38,
  "tags": ["techmart", "executive", "slo"],
  "time": { "from": "now-24h", "to": "now" },
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "pluginId": "prometheus",
        "label": "Datasource",
        "hide": 0,
        "current": {}
      }
    ]
  },
  "panels": [

    {
      "type": "stat", "id": 1, "title": "Platform Success Rate",
      "description": "Percentage of all CUJ spans completing without error over the last 24 hours.",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 5 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=~\"cuj..+\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=~\"cuj..+\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "decimals": 3, "min": 99, "max": 100,
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "red",    "value": null },
            { "color": "yellow", "value": 99   },
            { "color": "green",  "value": 99.9 }
          ]}
        }
      }
    },

    {
      "type": "stat", "id": 2, "title": "Platform p99 Latency",
      "description": "99th percentile latency across all CUJ spans.",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 5 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "histogram_quantile(0.99, sum(rate(techmart_duration_milliseconds_bucket{span_name=~\"cuj..+\"}[5m])) by (le))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms", "decimals": 0,
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green",  "value": null },
            { "color": "yellow", "value": 1000 },
            { "color": "red",    "value": 2000 }
          ]}
        }
      }
    },

    {
      "type": "stat", "id": 3, "title": "Total Requests (24h)",
      "description": "Total CUJ requests processed in the last 24 hours.",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 5 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "sum(increase(techmart_calls_total{span_name=~\"cuj..+\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "area" },
      "fieldConfig": { "defaults": { "unit": "short", "decimals": 0 } }
    },

    {
      "type": "stat", "id": 4, "title": "Failed Requests (24h)",
      "description": "Total CUJ errors in the last 24 hours. Green = zero errors.",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 5 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "sum(increase(techmart_calls_total{span_name=~\"cuj..+\", status_code=\"STATUS_CODE_ERROR\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": {
        "defaults": {
          "unit": "short", "decimals": 0,
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "red",   "value": 1    }
          ]}
        }
      }
    },

    {
      "type": "timeseries", "id": 5, "title": "Platform Error Rate",
      "description": "Overall error rate across all CUJs. Dashed line = 0.1% SLO budget threshold.",
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "100 * sum(rate(techmart_calls_total{span_name=~\"cuj..+\", status_code=\"STATUS_CODE_ERROR\"}[5m])) / sum(rate(techmart_calls_total{span_name=~\"cuj..+\"}[5m]))",
          "legendFormat": "error rate"
        },
        { "expr": "vector(0.1)", "legendFormat": "SLO budget (0.1%)" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 3, "custom": { "lineWidth": 2, "fillOpacity": 10 } },
        "overrides": [{
          "matcher": { "id": "byName", "options": "SLO budget (0.1%)" },
          "properties": [
            { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } },
            { "id": "custom.lineStyle", "value": { "fill": "dash" } },
            { "id": "custom.fillOpacity", "value": 0 }
          ]
        }]
      },
      "options": { "tooltip": { "mode": "multi" }, "legend": { "displayMode": "list", "placement": "bottom" } }
    },

    {
      "type": "row", "id": 6, "title": "Per-CUJ Health",
      "gridPos": { "x": 0, "y": 13, "w": 24, "h": 1 },
      "collapsed": false,
      "panels": []
    },

    {
      "type": "stat", "id": 10, "title": "checkout",
      "gridPos": { "x": 0, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.checkout\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.checkout\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 11, "title": "product-discovery",
      "gridPos": { "x": 3, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.product-discovery\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.product-discovery\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 12, "title": "product-search",
      "gridPos": { "x": 6, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.product-search\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.product-search\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 13, "title": "product-review",
      "gridPos": { "x": 9, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.product-review\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.product-review\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 14, "title": "order-lookup",
      "gridPos": { "x": 12, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.order-lookup\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.order-lookup\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 15, "title": "order-history",
      "gridPos": { "x": 15, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.order-history\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.order-history\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 16, "title": "product-upload",
      "gridPos": { "x": 18, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.product-upload\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.product-upload\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "stat", "id": 17, "title": "product-upload-job",
      "gridPos": { "x": 21, "y": 14, "w": 3, "h": 3 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "100 * sum(increase(techmart_calls_total{span_name=\"cuj.product-upload-job\", status_code!=\"STATUS_CODE_ERROR\"}[24h])) / sum(increase(techmart_calls_total{span_name=\"cuj.product-upload-job\"}[24h]))",
        "legendFormat": ""
      }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99 }, { "color": "green", "value": 99.9 }] } } }
    },

    {
      "type": "timeseries", "id": 20, "title": "Request Volume by CUJ",
      "description": "Request rate per CUJ over time — shows the traffic mix.",
      "gridPos": { "x": 0, "y": 17, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [{
        "expr": "sum by (cuj_name) (rate(techmart_calls_total{span_name=~\"cuj..+\"}[5m]))",
        "legendFormat": "{{cuj_name}}"
      }],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "lineWidth": 1, "fillOpacity": 30, "stacking": { "mode": "normal" } } }
      },
      "options": { "tooltip": { "mode": "multi" }, "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] } }
    }

  ]
}
